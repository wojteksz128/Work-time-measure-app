<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.wojteksz128.worktimemeasureapp">

    <application
        android:name=".WorkTimeMeasureApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".window.dayoff.DaysOffListActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <activity
            android:name=".window.dashboard.DashboardActivity"
            android:exported="true"
            android:label="@string/dashboard_activity_title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".window.history.HistoryActivity"
            android:label="@string/history_activity_title"
            android:launchMode="singleTop"
            android:parentActivityName=".window.dashboard.DashboardActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="jelly_bean">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.wojteksz128.worktimemeasureapp.window.dashboard.DashboardActivity" />
        </activity>

        <activity
            android:name=".window.settings.SettingsActivity"
            android:label="@string/settings_activity_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".window.dashboard.DashboardActivity" />
        </activity>

        <receiver
            android:name=".notification.worktime.action.WorkTimeNotificationActionReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".notification.TimerExpiredReceiver"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="com.medavox.library.mutime.Persistence"
            android:exported="false"
            tools:ignore="Instantiatable"
            tools:node="merge" />
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>