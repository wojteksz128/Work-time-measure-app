<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="window">
        <item name="android:background">@color/background</item>
    </style>

    <style name="recycler_view">
        <item name="android:layout_marginLeft">@dimen/no_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/no_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
    </style>

    <style name="recycler_view_item">
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:background">@color/rv_background</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/primary_elevation</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="recycler_view_item_header">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--##########################################-->
    <!--############# Base Activity ##############-->
    <!--##########################################-->
    <style name="base">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="base_navbar">
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="base_navbar_header" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@drawable/side_nav_bar</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingTop">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/large_padding</item>
    </style>

    <style name="base_navbar_header_icon">
        <item name="android:paddingTop">@dimen/default_padding</item>
    </style>

    <style name="base_navbar_header_username">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="base_navbar_header_email" />

    <!--##########################################-->
    <!--########### Dashboard Activity ###########-->
    <!--##########################################-->

    <style name="dashboard" parent="window" />

    <style name="dashboard_layout">
        <item name="android:layout_margin">8dp</item>
    </style>

    <!--##########################################-->
    <!--############ History Activity ############-->
    <!--##########################################-->

    <style name="history" parent="window" />

    <style name="history_rv" parent="recycler_view" />

    <style name="history_rv_work_day" parent="recycler_view_item" />

    <style name="history_rv_work_day_header" parent="recycler_view_item_header" />

    <style name="history_rv_work_day_duration">
        <item name="android:layout_margin">@dimen/extra_large_margin</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="history_rv_work_day_events">
        <item name="android:layout_margin">@dimen/large_margin</item>
    </style>

    <style name="history_rv_work_day_events_item_label">
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

</resources>
