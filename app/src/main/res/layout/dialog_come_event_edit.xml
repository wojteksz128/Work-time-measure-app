<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- TODO: Check strings -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_height="wrap_content"
        tools:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/extra_large_padding">

            <net.wojteksz128.worktimemeasureapp.util.view.TimeEditor
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:time="@={viewModel.startTime}"
                app:inTimeEditMode="@={viewModel.startTimeInEditMode}"
                app:title="@string/edit_come_event_dialog_start_time_label" />

            <net.wojteksz128.worktimemeasureapp.util.view.TimeEditor
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:time="@={viewModel.finishTime}"
                app:inTimeEditMode="@={viewModel.finishTimeInEditMode}"
                app:title="@string/edit_come_event_dialog_finish_time_label" />
        </LinearLayout>
    </ScrollView>

    <data>

        <variable
            name="dateTimeUtils"
            type="net.wojteksz128.worktimemeasureapp.util.datetime.DateTimeUtils" />

        <variable
            name="viewModel"
            type="net.wojteksz128.worktimemeasureapp.window.dialog.comeevent.EditComeEventDialogViewModel" />
    </data>
</layout>
