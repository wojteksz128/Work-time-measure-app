<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/history_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".window.history.HistoryActivity"
    android:background="@color/history_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/history_rv_days"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/history_rv_horizontal_margin"
        android:layout_marginTop="@dimen/history_rv_vertical_margin"
        android:layout_marginEnd="@dimen/history_rv_horizontal_margin"
        android:layout_marginBottom="@dimen/history_rv_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>