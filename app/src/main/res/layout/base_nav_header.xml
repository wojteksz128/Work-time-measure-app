<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/base_navbar_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/base_navbar_header_profile_image"
        style="@style/base_navbar_header_profile_image"
        android:contentDescription="@string/base_navbar_header_profile_image_desc"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/base_navbar_header_profile_username"
        style="@style/base_navbar_header_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/base_navbar_header_profile_username_notSetMessage" />

    <TextView
        android:id="@+id/base_navbar_header_profile_email"
        style="@style/base_navbar_header_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_navbar_header_profile_email_notSetMessage" />

</LinearLayout>
