<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        style="@style/base_navbar_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/base_navbar_header_profile_image"
            style="@style/base_navbar_header_profile_image"
            android:contentDescription="@string/base_navbar_header_profile_image_desc"
            app:imageBitmap="@{viewModel.profileImageBitmap}"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/base_navbar_header_profile_username"
            style="@style/base_navbar_header_profile_username"
            isDefined="@{viewModel.isProfileUsernameDefined()}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.profileUsername, default=@string/base_navbar_header_profile_username_notSetMessage}" />

        <TextView
            android:id="@+id/base_navbar_header_profile_email"
            style="@style/base_navbar_header_profile_email"
            isDefined="@{viewModel.isProfileEmailDefined()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.profileEmail, default=@string/base_navbar_header_profile_email_notSetMessage}" />

    </LinearLayout>

    <data>

        <import type="android.graphics.Typeface" />

        <variable
            name="viewModel"
            type="net.wojteksz128.worktimemeasureapp.window.BaseViewModel" />
    </data>

</layout>
